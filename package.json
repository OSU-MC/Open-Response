{
    "name": "open-response",
    "version": "0.1.0",
    "private": true,
    "description": "Open Source Classroom Polling Software",
    "repository": {
        "type": "git",
        "url": "https://github.com/OSU-MC/Open-Response/"
    },
    "workspaces": [
        "core",
        "client"
    ],
    "scripts": {
        "config": "npm run config -w=core && npm run config -w=client",
        "start": "trap 'npm run stop:docker -w=core' EXIT; npm run start:docker -w=core && npm run deploy -w=client",
        "stop": "npm run stop:docker -w=core",
        "start:core": "npm run start:docker -w=core",
        "start:client": "npm run deploy -w=client &"
    },
    "keywords": [],
    "author": "",
    "license": "GPL-3.0-or-later",
    "dependencies": {
        "forever": "^4.0.3"
    }
}
